<td>
	<select name="cnt<%=cart.getPoc_idx() %>" class="optCmb" onchange="chCount(<%=cart.getPoc_idx() %>, this.value);">
<%		for (int j = 1 ; j <= max ; j++) { %>
		<option value="<%=j %>" <% if (j == cart.getPoc_cnt()) { %>selected="selected"<% } %>><%=j %></option>
<% 		} %>
	</select>
</td>
