<script>
$(document).ready(function() {
    $('#write').on('keyup', function() {
        $('#write_cnt').html("("+$(this).val().length+" / 300)");
 
        if($(this).val().length > 300) {
            $(this).val($(this).val().substring(0, 300));
            $('#write_cnt').html("(300 / 300)");
        }
    });   
});
