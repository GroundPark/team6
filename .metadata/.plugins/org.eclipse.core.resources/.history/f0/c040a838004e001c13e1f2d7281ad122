package challenge.svc;

import static challenge.db.JdbcUtil.*;		
import java.util.*;
import challenge.dao.*;
import challenge.vo.*;
import java.sql.*;

public class ChallengePreviewSvc {
	public int readcntUpdate(int idx) {
		int result = 0;
		Connection conn = getConnection();
		
		ChallengePreviewDao challengePreviewDao = ChallengePreviewDao.getInstance();
		challengePreviewDao.setConnection(conn);
		result = challengePreviewDao.readcntUpdate(idx);
		
		if(result == 1) 	commit(conn);		
		else				rollback(conn);
		
		close(conn);
		return result;
	}
}
