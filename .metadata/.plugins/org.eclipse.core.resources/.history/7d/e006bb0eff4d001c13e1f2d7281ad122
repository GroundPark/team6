package challenge.svc;

import static challenge.db.JdbcUtil.*;		
import java.util.*;
import challenge.dao.*;
import challenge.vo.*;
import java.sql.*;

public class ChallengeViewSvc {
	public int readcntUpdate(int idx) {
		int result = 0;
		Connection conn = getConnection();
		
		ChallengeViewDao challengeViewDao = ChallengeViewDao.getInstance();
		challengeViewDao.setConnection(conn);
		result = challengeViewDao.readcntUpdate(idx);
		
		if(result == 1) 	commit(conn);		// update했으므로 1개
		else				rollback(conn);
		
		close(conn);
		return result;
	}
}
